@model List<ProductVM>

@foreach (var product in Model)
{

    <div class="product">
        <div class="wrapper">
            <div class="containerCard">
                <i class="fa-solid fa-heart wishlist"></i>
                <a asp-controller="Shop" asp-action="ProductDetail" asp-route-id="@product.Id">
                    <div style="
                        background: url(/assets/images/products/@product.Image)
                          no-repeat center center;
                        -webkit-background-size: 100%;
                        -moz-background-size: 100%;
                        -o-background-size: 100%;
                        background-size: 100%;
                      "
                         class="top"></div>
                </a>
                <div class="bottom">
                    <div class="left">
                        <div class="details">
                            <h4>@product.Name</h4>
                            <p>£@product.Price</p>
                        </div>
                        <div class="buy">
                            <i class="fa-solid fa-cart-shopping"></i>
                        </div>
                    </div>
                    <div class="right">
                        <div class="done">
                            <i class="fa-solid fa-check"></i>
                        </div>
                        <div class="details">
                            <h4>@product.Name</h4>
                            <p>Added to your cart</p>
                        </div>
                        <div class="remove">
                            <i class="fa-solid fa-x"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="inside">
                <div class="icon">
                    <i class="fa-solid fa-circle-info"></i>
                </div>
                <div class="contents">
                    <table>
                        <tr>
                            @if (product.Width != 0)
                            {
                                <th>Width</th>
                            }


                            @if (product.Height != 0)
                            {
                                <th>Height</th>
                            }

                        </tr>
                        <tr>
                            @if (product.Width != 0)
                            {
                                <td>@product.Width sm</td>
                            }

                            @if (product.Height != 0)
                            {
                                <td>@product.Height sm</td>
                            }
                        </tr>
                        <tr>
                            @if (product.Length != 0)
                            {
                                <th>Length</th>

                            }
                            @if (product.Weight != 0)
                            {

                                <th>Weight</th>
                            }


                        </tr>
                        <tr>
                            @if (product.Length != 0)
                            {
                                <td>@product.Length sm</td>
                            }

                            @if (product.Weight != 0)
                            {
                                <td>@product.Weight kg</td>
                            }
                        </tr>
                        <tr>
                            <th>Material</th>
                        </tr>
                        <tr>
                            <td>@product.Material</td>
                        </tr>

                    </table>
                </div>
            </div>
        </div>
    </div>
}
