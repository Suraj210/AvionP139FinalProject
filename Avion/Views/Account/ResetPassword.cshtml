@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
}

@section css {
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/assets/css/pages/login/login.css" />
}

<!-- Main Part -->
<main>
    <section id="login">
        <div class="container">
            <form method="post" asp-controller="Account" asp-action="ResetPassword" class="login-form">
                <h1>Forhot Password?</h1>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"> Password</label>
                    <input asp-for="Password" class="form-control">
                    <span style="color:red;margin-bottom:5px;" asp-validation-for="Password"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control">
                    <span style="color:red;margin-bottom:5px;" asp-validation-for="ConfirmPassword"></span>
                </div>

                <input type="hidden" asp-for="Token" value="@Model.Token" />
                <input type="hidden" asp-for="UserId" value="@Model.UserId" />
                <button type="submit">Send</button>

            </form>
        </div>
    </section>
</main>


