@model CategoryCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <!-- Editable Category Details Form -->
            <form method="post" asp-action="Create" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Category Name</label>
                    <textarea asp-for="Name" class="form-control" id="CategoryTitle" rows="4"></textarea>
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="mb-3">

                    @for (int i = 0; i < Model.Brands.Count(); i++)
                    {
                        <input asp-for="Brands[i].Value" type="hidden" class="form-control">
                        <input asp-for="Brands[i].Selected" /> @Model.Brands[i].Text

                    }

                </div>
                <button type="submit" class="btn btn-success btn-lg">Submit</button>
            </form>
        </div>
    </div>
    <div class="back ">
        <a class="btn btn-dark btn-lg text-white d-block" asp-action="Index">Back</a>
    </div>
</div>

