@model ContactMessageVM
@{
    ViewData["Title"] = "Detail";
}


	<style>

		a {
			font-size: 16px !important;
			padding: 10px 21px !important;
		}

		input {
			font-size: 18px !important;
			font-weight: 600 !important;
		}

		textarea {
			height: 200px !important;
			font-size: 17px !important;
		}


	</style>


<div class="container my-5">
	<h1 class="text-center mt-3">Detail</h1>

	<div class="form-group mt-3">
		<label for="formFile" class="form-label my-2">FullName</label>
		<input class="form-control" id="customFile" disabled asp-for="@Model.Name" />
	</div>

	<div class="form-group mt-3">
		<label for="formFile" class="form-label my-2">Email</label>
		<input class="form-control" id="customFile" disabled asp-for="@Model.Email" />
	</div>

	<div class="form-group mt-3">
		<label for="formFile" class="form-label my-2">Message</label>
		<textarea class="form-control" id="customFile" disabled asp-for="@Model.Message"></textarea>
	</div>

	<div class="mt-3">
		<label for="formFile" class="form-label my-2">Create Date</label><br>
		@Model.CreateTime.ToString("dd/MM/yyyy")
	</div>
	<div class="back mt-2">
		<a class="btn btn-dark btn-lg text-white" asp-action="Index">Back</a>
	</div>

</div>
