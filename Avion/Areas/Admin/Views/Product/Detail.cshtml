@model ProductVM
@{
    ViewData["Title"] = "Detail";
}


<style>

    .productCategory {
        color: #2a254b;
        font-size: 1.25rem;
        padding: 1rem;
        font-style: normal;
        font-weight: 400;
        line-height: 140%;
        background-color: #ebe8f4;
        display: inline-block;
        margin-bottom: 1rem;
        width: fit-content;
    }

    .productBrand {
        color: black;
        font-size: 1.25rem;
        padding: 1rem;
        font-style: normal;
        font-weight: 400;
        line-height: 140%;
        background-color: teal;
        display: inline-block;
        margin-bottom: 1rem;
        width: fit-content;
    }

</style>



<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <!-- Blog Image -->
            <img src="~/assets/images/products/@Model.Image" alt="Testimonial Image" class="img-fluid rounded shadow">
        </div>
        <div class="col-md-6">
            <!-- Testimonial Details -->
            <div class="d-flex flex-column justify-content-center h-100">
                <h2 class="mb-3">@Model.Name</h2>
                <p class="text-muted">Created Time: @Model.CreateTime</p>
                <p class="mb-4">@Model.Description</p>
                @if(Model.CategoryName is not null)
                {
                <span>Category:</span>
                <p class="productCategory">@Model.CategoryName</p>
                }
                else
                {
                    <p class="productCategory">No Category</p>


                }
                @if (Model.BrandName is not null)
                {
                    
                <span>Brand:</span>
                <p class="productBrand">@Model.BrandName</p>
                }
                else
                {
                    <p class="productBrand">No Brand</p>

                }


            </div>
        </div>
    </div>
    <div class="back mt-2">
        <a class="btn btn-dark btn-lg text-white" asp-action="Index">Back</a>
    </div>

</div>



