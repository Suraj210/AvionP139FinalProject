@model BlogCategoryCreateVM
@{
    ViewData["Title"] = "Create";
}


<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <!-- Editable Blog Category Details Form -->
            <form method="post" asp-action="Create" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"> Category Name</label>
                    <input type="text" asp-for="Name" class="form-control" id="BlogCategoryTitle" rows="4"/>
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <button type="submit" class="btn btn-success btn-lg">Save Changes</button>
            </form>
        </div>
    </div>
    <div class="back ">
        <a class="btn btn-dark btn-lg text-white d-block" asp-action="Index">Back</a>
    </div>
</div>


