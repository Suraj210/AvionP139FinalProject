@model AdvertVM
@{
    ViewData["Title"] = "Detail";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <!-- Advert Image -->
            <img src="~/assets/images/@Model.Image" alt="Hero Image" class="img-fluid rounded shadow">
        </div>
        <div class="col-md-6">
            <!-- Advert Details -->
            <div class="d-flex flex-column justify-content-center h-100">
                <p class="text-muted">Created Time: @Model.CreateTime</p>
            </div>
        </div>
    </div>
    <div class="back mt-2">
        <a class="btn btn-dark btn-lg text-white" asp-action="Index">Back</a>
    </div>

</div>

