@model BlogCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <!-- Editable blog Details Form -->
            <form method="post" asp-action="Create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Photo">Image</label>
                    <input asp-for="Photo" type="file" class="form-control my-3" >
                    <span class="text-danger" asp-validation-for="Photo"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Blog Title</label>
                    <textarea asp-for="Title" class="form-control" id="blogTitle" rows="4" ></textarea>
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group my-3">
                    <label asp-for="BlogCategoryId">Categories</label>
                    <select asp-for="BlogCategoryId" asp-items="@ViewBag.blogCategories" class="form-control">
                    </select>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Blog Description</label>
                    <textarea asp-for="Description" class="form-control" id="blogMessage" rows="4" ></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="mb-3">

                    @for (int i = 0; i < Model.Tags.Count(); i++)
                    {
                        <input asp-for="Tags[i].Value" type="hidden" class="form-control">
                        <input asp-for="Tags[i].Selected" /> @Model.Tags[i].Text

                    }

                </div>
                <button type="submit" class="btn btn-success btn-lg">Submit</button>
            </form>
        </div>
    </div>
    <div class="back ">
        <a class="btn btn-dark btn-lg text-white d-block" asp-action="Index">Back</a>
    </div>
</div>



