@model List<FeatureVM>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1 class="text-center mt-3 mb-3">Feature</h1>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Created Time
                    </th>
                    <th>
                        Operations
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var feature in Model)
                {
                    <tr>
                        <td class="py-1">
                            <img style="width:50px; height:50px" src="~/assets/images/@feature.Image" alt="image" />
                        </td>
                        <td>
                            @feature.Title.Substring(0,(int)Math.Ceiling(feature.Title.Length*0.5))...
                        </td>
                        <td>
                            @feature.Description.Substring(0,(int)Math.Ceiling(feature.Description.Length * 0.4))...
                        </td>
                        <td>
                            @feature.CreateTime.ToString("MM//dd/yyyy")
                        </td>
                        <td class="d-flex">
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@feature.Id"><i class="fa-solid fa-circle-info"></i></a>
                            <a class="btn btn-outline-primary mx-1" asp-action="Edit" asp-route-id="@feature.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                        </td>
                    </tr>

                }



            </tbody>
        </table>
    </div>

</div>

